#!/usr/bin/env ruby

require 'rubygems'
require 'bundler'
Bundler.require
Dotenv.load

Dir["./lib/*.rb"].each { |file| require file }

text = "It is a really nice place. People is great!"

text = Extract.split!(text)

sentences = Array.new
text.each do |t|
  sentence = Extract.first(t)
  sentences << sentence
end
p sentences
