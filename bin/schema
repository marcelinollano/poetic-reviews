#!/usr/bin/env ruby

require 'rubygems'
require 'bundler'
Bundler.require
Dotenv.load

DB = Sequel.connect("sqlite://db/db.sqlite3")

DB.create_table?(:things) do
  primary_key :id
  String   :name
  String   :url
  DateTime :created_at
  DateTime :updated_at
  index    :id, :unique => true
end

DB.create_table?(:reviews) do
  primary_key :id
  Integer  :thing_id
  Text     :text
  String   :author
  Float    :sentiment_score
  Float    :sentiment_magnitude
  DateTime :created_at
  DateTime :updated_at
  index    :id, :unique => true
end

DB.create_table?(:sentences) do
  primary_key :id
  Integer  :review_id
  Text     :text
  Text     :words_json
  String   :words_first
  String   :words_last
  Integer  :words_count
  Text     :syllables_json
  Integer  :syllables_count
  String   :rhyme_assonance
  String   :rhyme_consonance
  Float    :sentiment_score
  Float    :sentiment_magnitude
  DateTime :created_at
  DateTime :updated_at
  index    :id, :unique => true
end
