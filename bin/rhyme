#!/usr/bin/env ruby

require 'rubygems'
require 'bundler'
Bundler.require
Dotenv.load

Dir["./lib/*.rb"].each { |file| require file }

sentences = Sentence.where(:syllables_count => 8)

# sentences = sentences.all(Sequel.like(:rhyme_consonance, '%i|o%'))

sentences = sentences.all(:sort => :rhyme_consonance)

sentences.each do |sentence|
  p "#{sentence.rhyme_consonance}"
end
