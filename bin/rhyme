#!/usr/bin/env ruby

require 'rubygems'
require 'bundler'
Bundler.require
Dotenv.load

Dir["./lib/*.rb"].each { |file| require file }

sentences = Sentence.where(:syllables_count => 8)
sentences.each do |sentence|
  p "#{sentence.text} #{sentence.syllables.flatten[-2]} #{sentence.syllables.flatten[-1]}"
end

