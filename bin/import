#!/usr/bin/env ruby
require 'rubygems'
require 'bundler'
Bundler.require
Dotenv.load

libs = "#{Dir.pwd}/lib/*.rb"
Dir[libs].each { |lib| require lib }

places = [
  {
    :name  => 'Arahy restaurante',
    :slug  => 'arahy-restaurante',
    :url   => 'https://goo.gl/maps/No4fpQKYNft'
  },
  { :name  => 'Puerta del sol',
    :slug  => 'puerta-del-sol',
    :url   => 'https://goo.gl/maps/DrHCfet1W3q'
  },
  { :name  => 'Muro de las lamentaciones',
    :slug  => 'muro-de-las-lamentaciones',
    :url   => 'https://goo.gl/maps/e41gTF7aBY22'
  },
  { :name  => 'Primark',
    :slug  => 'primark',
    :url   => 'https://goo.gl/maps/MWCkh2Kg24v'
  },
  { :name  => 'Desperate literature',
    :slug  => 'desperate-literature',
    :url   => 'https://goo.gl/maps/ARnLUwFdT332'
  }
]

places.each do |place|
  puts "=====> Import #{place[:name]}"
  files = "#{Dir.pwd}/data/#{place[:slug]}/*.html"
  Dir[files].each do |file|
    thing   = Thing.save({ :name => place[:name], :url  => place[:url] })
    reviews = GoogleMaps.scrap(file)
    begin
      reviews.each do |review|
        puts "-----> Review by #{review[:author]}"
        review = Review.save({
          :thing_id => thing.id,
          :text => review[:text],
          :author => review[:author]
        })
      end
    rescue Google::Cloud::ResourceExhaustedError
      puts "-----> Waiting to retry..."
      sleep(0.5)
      retry
    end
    puts "-----> #{reviews.size} were imported"
  end
end
